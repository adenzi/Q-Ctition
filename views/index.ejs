<form action="/" method="POST">
    <label for="name">اسم الطالب:</label>
    <input type="text" id="name" name="name" required>
    
    <label for="grade">صف الطالب:</label>
    <select id="grade" name="grade" required>
        <option value="">اختر الصف</option>
        <option value="رابع اول">4/1</option>
        <option value="رابع ثاني">4/2</option>
        <option value="خامس اول">5/1</option>
        <option value="خامس ثاني">5/2</option>
        <option value="سادس اول">6/1</option>
        <option value="سادس ثاني">6/2</option>
    </select>

    <label for="age">عمر الطالب:</label>
    <input type="number" id="age" name="age" required>
    
    <label for="school_branch">فرع المدرسة:</label>
    <input type="text" id="school_branch" name="school_branch" required>
    
    <label for="known_chapters">الأجزاء المحفوظة:</label>
    <input type="text" id="known_chapters" name="known_chapters" required>
    
    <label for="email">البريد الإلكتروني:</label>
    <input type="email" id="email" name="email" required>

    <input type="submit" value="إرسال">
</form>
